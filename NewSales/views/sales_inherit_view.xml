<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="inherit_sales_form_view" model="ir.ui.view">
        <field name="name">sales.inherit.form.view</field>
        <field name="model">sales.order</field>
        <field name="inherit_id" ref="NewSales.sales_order_form_view"/>
        <field name="arch" type="xml">
            <field name="mobile" position="after">
                <field name="customer_desc"/>
            </field>
        </field>
    </record>

    <record id="inherit_sales_tree_view" model="ir.ui.view">
        <field name="name">sales.inherit.tree.view</field>
        <field name="model">sales.order</field>
        <field name="inherit_id" ref="NewSales.sales_order_tree_view"/>
        <field name="arch" type="xml">
            <field name="mobile" position="after">
                <field name="customer_desc"/>
            </field>
        </field>
    </record>
</odoo>